<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Questions</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Options</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= question.title %></td>
              <td>
                <% question.options.each do |option| %>
                  <div>
                    <%= option.title %> - <%= option.option_type.capitalize %>
                  </div>
                <% end %>
              </td>
              <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_admin_question_path(question), class: "btn btn-primary" %></td>
              <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Question', new_admin_question_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
